<div class="nes-container with-title post">
    <p class="title">Изменить пост</p>
    <form method="post" action="/post/{{post._id}}/edit" enctype="multipart/form-data">
        <label for="textarea_field">Textarea</label>
        <textarea id="textarea_field" name="text" class="nes-textarea" required>{{post.text}}</textarea>
        <input type="file" accept="image/*" name="photo">

        <button type="submit" class="nes-btn is-success">Изменить пост</button>
    </form>
</div>